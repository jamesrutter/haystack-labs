---
interface Props {
  class?: string;
}

import Scroll from "../assets/scroll.svg";

const { class: className } = Astro.props;
---

<section class={`hero ${className || ""}`}>
  <div class="hero__container">
    <div class="hero__content">
      <h1 class="hero__title">
        WHERE <span class="hero__title-accent">CRAFT</span> MEETS<br />
        TECHNOLOGY
      </h1>
      <p class="hero__description">
        An experimental residency program exploring the intersection of
        traditional craft and emerging technologies at Haystack Mountain School
        of Crafts
      </p>
      <div class="hero__actions">
        <a href="/about" class="hero__button hero__button--primary"
          >LEARN MORE</a
        >
        <a href="/projects" class="hero__button hero__button--secondary"
          >VIEW PROJECTS</a
        >
      </div>
    </div>

    <div class="hero__scroll-indicator">
      <span class="hero__scroll-icon"><Scroll /></span>
    </div>
  </div>

  <style>
    .hero {
      background-color: var(--color-background-dark);
      color: var(--color-text-primary-dark);
      min-height: 100vh;
      display: flex;
      align-items: center;
      position: relative;
      overflow: hidden;
    }

    .hero__container {
      max-width: var(--container-7xl);
      margin-inline: auto;
      padding: var(--space-5xl) var(--space-lg);
      display: grid;
      grid-template-columns: 1fr;
      gap: var(--space-5xl);
      align-items: center;
      text-align: center;
    }

    .hero__title {
      font-weight: var(--font-weight-bold);
      font-size: var(--font-size-6xl);
      line-height: var(--line-height-tight);
      margin-bottom: var(--space-xl);
      text-transform: uppercase;
    }

    .hero__title-accent {
      color: var(--color-accent);
    }

    .hero__description {
      font-size: var(--font-size-xl);
      line-height: var(--line-height-relaxed);
      margin-block-end: var(--space-3xl);
      max-width: 900px;
      text-wrap: balance;
    }

    .hero__actions {
      display: flex;
      gap: var(--space-lg);
      justify-content: center;
      flex-wrap: wrap;
    }

    .hero__button {
      display: inline-block;
      padding: var(--space-md) var(--space-2xl);
      font-family: var(--font-family-display);
      font-weight: var(--font-weight-semibold);
      font-size: var(--font-size-base);
      text-transform: uppercase;
      letter-spacing: var(--letter-spacing-wide);
      text-decoration: none;
      border-radius: var(--radius-md);
      transition: var(--transition-normal);
      border: 2px solid transparent;
    }

    .hero__button--primary {
      background-color: var(--color-accent);
      color: var(--color-text-primary);
      border-color: var(--color-accent);
    }

    .hero__button--primary:hover {
      background-color: transparent;
      color: var(--color-accent);
      border-color: var(--color-accent);
    }

    .hero__button--secondary {
      background-color: transparent;
      color: var(--color-text-primary-dark);
      border-color: var(--color-text-primary-dark);
    }

    .hero__button--secondary:hover {
      background-color: var(--color-text-primary-dark);
      color: var(--color-background-dark);
    }

    .hero__scroll-indicator {
      position: absolute;
      bottom: var(--space-2xl);
      left: 50%;
      transform: translateX(-50%);
      animation: bounce 2s infinite;
    }

    .hero__scroll-icon {
      font-size: var(--font-size-xl);
      color: var(--color-accent);
      transform: rotate(45deg);
    }

    @keyframes bounce {
      0%,
      20%,
      50%,
      80%,
      100% {
        transform: translateX(-50%) translateY(0);
      }
      40% {
        transform: translateX(-50%) translateY(-10px);
      }
      60% {
        transform: translateX(-50%) translateY(-5px);
      }
    }

    @media (max-width: 768px) {
      .hero__container {
        padding: var(--space-3xl) var(--space-md);
        gap: var(--space-3xl);
      }

      .hero__title {
        font-size: var(--font-size-4xl);
      }

      .hero__description {
        font-size: var(--font-size-lg);
      }

      .hero__actions {
        flex-direction: column;
        align-items: center;
      }

      .hero__button {
        width: 100%;
        max-width: 280px;
      }

      .hero__stats {
        grid-template-columns: 1fr;
        gap: var(--space-lg);
      }
    }
  </style>
</section>
