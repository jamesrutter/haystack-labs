---
import Scroll from "@/assets/scroll.svg";
---

<section class="section hero full-screen">
  <div class="wrapper">
    <div class="content">
      <h1 class="title">
        WHERE <span class="accent">CRAFT</span> MEETS<br />
        TECHNOLOGY
      </h1>
      <p class="description">
        An experimental residency program exploring the intersection of
        traditional craft and emerging technologies at Haystack Mountain School
        of Crafts
      </p>
      <div class="actions">
        <a href="/participants" class="btn btn-primary">PEOPLE</a>
        <a href="/projects" class="btn btn-primary">PROJECTS</a>
        <a href="/years" class="btn btn-primary">YEARS</a>
      </div>
    </div>

    <div class="scroll-indicator">
      <span class="scroll-icon"><Scroll /></span>
    </div>
  </div>

  <style>
    .scroll-indicator {
      position: absolute;
      bottom: var(--space-2xl);
      left: 50%;
      transform: translateX(-50%);
      animation: bounce 2s infinite;
    }

    .scroll-icon {
      font-size: var(--font-size-xl);
      color: var(--color-accent);
      transform: rotate(45deg);
    }

    @keyframes bounce {
      0%,
      20%,
      50%,
      80%,
      100% {
        transform: translateX(-50%) translateY(0);
      }
      40% {
        transform: translateX(-50%) translateY(-10px);
      }
      60% {
        transform: translateX(-50%) translateY(-5px);
      }
    }
  </style>
</section>
