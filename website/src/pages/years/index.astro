---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";

const years = await getCollection("years");
const sortedYears = years.sort((a, b) => b.data.year - a.data.year);
---

<Layout
  title="Years - Haystack Labs"
  description="A collection of years from Haystack Labs"
>
  <section class="section">
    <div class="wrapper">
      <h1 class="text-inverse">Years</h1>
      <div class="grid grid--2col">
        {sortedYears.map((year) => (
          <div class="card card--hover">
            <h3>
              <a href={`/years/${year.slug}`}>{year.data.title}</a>
            </h3>
            <p class="stat-label">{year.data.theme}</p>
            {year.data.description && <p>{year.data.description}</p>}
            {year.data.location && (
              <p><strong>Location:</strong> {year.data.location}</p>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
